{% extends 'front/_front_index.html.twig' %}

{% block title %} Liste participants {{ challenge.name }} {% endblock %}

{% block body %}
    <div class="site-section section-2 vh-100 overflow-hidden bg-light" id="process-section" data-aos="fade">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0">
                    <h2 class="section-title" style="max-width: 100%!important;">
                        Participants au {{ challenge.name }}
                    </h2>
                </div>
            </div>
            <ul class="nav nav-pills nav-justified mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Algorithme</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Dev</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill"
                       href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">
                        Front
                    </a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    <div class="card w-100" style="height: 500px;overflow-y: scroll">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Pseudo</th>
                                <th>Range</th>
                                <th>Point</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for participant in participants %}
                                {% if participant.choice == 'Algorithme' %}
                                    <tr>
                                        <td>{{ participant.pseudo }}</td>
                                        <td>1</td>
                                        <td>00.00</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <div class="card w-100" style="height: 500px;overflow-y: scroll">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Pseudo</th>
                                <th>Range</th>
                                <th>Point</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for participant in participants %}
                                {% if participant.choice == 'Dev' %}
                                    <tr>
                                        <td>{{ participant.pseudo }}</td>
                                        <td>1</td>
                                        <td>00.00</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>


                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                    <div class="card w-100" style="height: 500px;overflow-y: scroll">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>Pseudo</th>
                                <th>Range</th>
                                <th>Point</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for participant in participants %}
                                {% if participant.choice == 'Front' %}
                                    <tr>
                                        <td>{{ participant.pseudo }}</td>
                                        <td>1</td>
                                        <td>00.00</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
