{% extends 'base.html.twig' %}

{% block body %}
    <div class="intro-section custom-owl-carousel" id="home-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 mr-auto" data-aos="fade-up">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" value="Enregistrer" class="btn d-block w-100 btn-primary">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
                <div class="col-lg-6 ml-auto" data-aos="fade-up" data-aos-delay="100">
